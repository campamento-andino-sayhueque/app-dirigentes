{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "npm: dev",
      "detail": "Iniciar servidor de desarrollo",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Local:\\s+(https?://.*)|(ready in \\d+ms)"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "label": "npm: build",
      "detail": "Construir para producci√≥n"
    },
    {
      "type": "npm",
      "script": "lint",
      "group": "test",
      "label": "npm: lint",
      "detail": "Ejecutar ESLint"
    },
    {
      "type": "npm",
      "script": "test",
      "group": "test",
      "label": "npm: test",
      "detail": "Ejecutar tests"
    },
    {
      "type": "npm",
      "script": "preview",
      "group": "build",
      "label": "npm: preview",
      "detail": "Vista previa de la build"
    }
  ]
}
