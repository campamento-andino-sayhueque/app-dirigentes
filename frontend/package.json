{
  "name": "cas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"firebase,next\" -c \"yellow,cyan\" \"npm run firebase:emulators\" \"npm run dev:next\"",
    "dev:next": "next dev",
    "dev:seed": "npm run firebase:seed && npm run dev",
    "build": "next build",
    "build:prod": "cross-env NODE_ENV=production NEXT_PUBLIC_API_URL=https://backend-monolito-production.up.railway.app next build",
    "start": "next start",
    "lint": "next lint",
    "firebase:emulators": "firebase emulators:start --import=./firebase-data --export-on-exit=./firebase-data",
    "firebase:emulators:clean": "firebase emulators:start",
    "firebase:seed": "cd .. && ./scripts/seed-auth-users.sh && cd frontend",
    "firebase:dev": "npm run firebase:rules:dev && firebase emulators:start --import=./firebase-data --export-on-exit=./firebase-data",
    "firebase:rules:dev": "shx cp ../firestore.rules.dev ../firestore.rules && echo ✅ Reglas de DESARROLLO activadas",
    "firebase:rules:prod": "shx cp ../firestore.rules.prod ../firestore.rules && echo ✅ Reglas de PRODUCCIÓN activadas",
    "firebase:rules:status": "echo 'Estado actual de las reglas:' && head -n 5 ../firestore.rules | grep -E 'REGLAS|reglas|allow.*true'",
    "generate:icons": "node scripts/generate-icons.mjs",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-store": "^0.8.0",
    "@tanstack/store": "^0.8.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^12.0.0",
    "lucide-react": "^0.546.0",
    "next": "^16.0.6",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-big-calendar": "^1.19.4",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.68.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "valibot": "^1.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "^16.0.6",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4",
    "shx": "^0.3.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
