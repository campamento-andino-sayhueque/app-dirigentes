{
  "name": "cas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"firebase,next\" -c \"yellow,cyan\" \"npm run firebase:emulators\" \"npm run dev:next\"",
    "dev:next": "next dev",
    "build": "next build",
    "build:prod": "cross-env NODE_ENV=production NEXT_PUBLIC_API_URL=https://backend-monolito-production.up.railway.app next build",
    "start": "next start",
    "lint": "next lint",
    "firebase:emulators": "firebase emulators:start",
    "firebase:emulators:import": "firebase emulators:start --import=./firebase-data",
    "firebase:emulators:export": "firebase emulators:export ./firebase-data",
    "firebase:dev": "npm run firebase:rules:dev && firebase emulators:start",
    "firebase:rules:dev": "shx cp ../firestore.rules.dev ../firestore.rules && echo ✅ Reglas de DESARROLLO activadas",
    "firebase:rules:prod": "shx cp ../firestore.rules.prod ../firestore.rules && echo ✅ Reglas de PRODUCCIÓN activadas",
    "firebase:rules:status": "echo 'Estado actual de las reglas:' && head -n 5 ../firestore.rules | grep -E 'REGLAS|reglas|allow.*true'",
    "generate:icons": "node scripts/generate-icons.mjs"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "firebase": "^12.0.0",
    "lucide-react": "^0.546.0",
    "next": "^16.0.6",
    "react": "19.1.0",
    "react-big-calendar": "^1.19.4",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "^16.0.6",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4",
    "shx": "^0.3.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
